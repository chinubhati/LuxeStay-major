<% layout("/layouts/Boilerplate") %>
<style> 
  .card{
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    transition: 0.3s;
    border-radius: 5px;
    width: 11rem;
    padding: 0;
  }
  
  @media (max-width: 480px) {
  
    .col-8 {
    width: 100%;
    margin: 0;
    }

    
    .col-6 {
    width: 100%;
    margin: 0;
    }

    .show-img {
    width: 100%;
    height: auto;
    
  }
}
</style>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>"
  const coordinates = <%- JSON.stringify(showID.geometry.coordinates) %>
  const listing = <%- JSON.stringify(showID) %>
  
</script>
  <div class="row">
    <div class="col-8 offset-3 mt-3">
      <h3><%=showID.title%></h3>
    </div>
    <div class="col-6 offset-3 listing-card">
      <img
        src="<%=showID.image.url%>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          <p class="card-text"><b>Owned By:</b><i> <%=showID.owner.username%></i></p>
          <b>Description:</b> <%=showID.description%> <br/><br>
          <b>Rupees:</b> &#8377;<%=showID.price.toLocaleString("en-IN")%> <br/><br>
          <b>Location:</b> <%=showID.location%> <br/><br>
          <b>Country:</b> <%=showID.country%> <br/><br>
        </p>
        <% if(currUser && currUser._id.equals(showID.owner._id)) { %>
        <div class="btns">
          <a href="/listings/<%=showID._id%>/edit" class="btn btn-dark"
            >Edit
          </a>
          <form action="/listings/<%=showID._id%>?_method=DELETE" method="POST">
            <button class="btn btn-dark add-btn dlt-btn">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
    <div class="col-6 offset-3 mb-3">
      <hr />
      <% if(currUser) { %>
      <h4>Leave a review</h4>
      <form
        action="/listings/<%=showID._id%>/reviews"
        method="post"
        class="needs-validation"
        novalidate
      >
        <div class="mt-3 mb-2">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mt-3 mb-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea
            name="review[comment]"
            id="comment"
            cols="30"
            rows="5"
            class="form-control"
            placeholder="Leave a comment"
            required
          ></textarea>
          <div class="invalid-feedback">Please add a vaild Comment.</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <hr>
      <%}%>
      <% if(showID.reviews.length > 0) { %>
       <h4>All Reviews</h4>
       <div class="row">
        <% for(review of showID.reviews){ %>
        <div class="card col-5 ms-3 mb-3">
          <div class="card-body" style=" width: 100%;">
            <h5 class="card-title">@<%=review.author.username%></h5>
            <p class="starability-result card-text" data-rating="<%= review.rating %>"</p>
            <p class="card-text"><%= review.comment%></p>
            <form
              action="/listings/<%=showID._id%>/reviews/<%=review.id%>?_method=DELETE"
              method="post"
            >
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
       </div>
      <% } %>
    </div>
    <div class="col-8 offset-3 mt-3 mb-2">
      <h3>Where you'll be</h3>
      <div id="map"></div>
    </div>
  </div>
<script src="/js/map.js"></script>